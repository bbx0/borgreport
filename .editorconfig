# EditorConfig: https://editorconfig.org

# top-level config
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# double-whitespace indicates an explicit line-break
[*.md]
trim_trailing_whitespace = false

# proper HEREDOC support
[*.{sh,bash}]
indent_style = tab
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{adoc,asciidoc}]
indent_style = tab
indent_size = 2
