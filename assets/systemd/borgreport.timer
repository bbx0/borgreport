[Unit]
Description=BorgBackup Report
Documentation=https://github.com/bbx0/borgreport

[Timer]
# Start each day at 14:05 with a added random delay of max 20 minutes
OnCalendar=*-*-* 14:05:00
RandomizedDelaySec=1200

[Install]
WantedBy=timers.target
